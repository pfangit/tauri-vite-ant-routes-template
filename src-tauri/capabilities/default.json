{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "fs:write-all",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:read-all",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:write-files",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    },
    {
      "identifier": "fs:read-files",
      "allow": [
        {
          "path": "**/**"
        }
      ]
    }
  ]
}